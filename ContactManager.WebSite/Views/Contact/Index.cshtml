@model ContactList

@{
	ViewData["Title"] = "Contacts";
}

<h1>Your Contacts</h1>

<div class="mt-2 mb-2">
	@Html.ActionLink("Create", "Create",
			new { }, new { @class = "btn btn-primary" })
</div>

<table class="table">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Contacts.First().FullName)</th>
			<th>@Html.DisplayNameFor(model => model.Contacts.First().Age)</th>
			<th>@Html.DisplayNameFor(model => model.Contacts.First().CreatedAt)</th>
			<th>@Html.DisplayNameFor(model => model.Contacts.First().UpdatedAt)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Contacts) {
			<tr>
				<td>@Html.DisplayFor(modelItem => item.FullName)</td>
				<td>@Html.DisplayFor(modelItem => item.Age)</td>
				<td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
				<td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
				<td>
					@Html.ActionLink("Addresses", "Index", "Address",
							 new { contactId = item.Id }, new { @class = "btn btn-primary" })
					@Html.ActionLink("Edit", "Edit",
							 new { id = item.Id }, new { @class = "btn btn-primary" })

					<form method="post" asp-action="Remove" asp-route-id="@item.Id" class="d-inline-block">
						<button type="button" class="btn btn-danger delete-button" data-name="@item.FullName">
							Remove
						</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
