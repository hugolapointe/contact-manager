@model AddressManage

@{
    ViewData["Title"] = "Manage addresses";
}

<h1>Addresses of <u>@Model.ContactFullName</u></h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Back", "Manage", "Contact", 
        new {}, new { @class = "btn btn-secondary" })
    @Html.ActionLink("Create", "Create", 
        new { contactId = @Model.ContactId }, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Street Number
            </th>
            <th>
                Street Name
            </th>
            <th>
                City
            </th>
            <th>
                Postal Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Addresses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", 
                    new { id = item.Id, contactId = Model.ContactId }, new { @class = "btn btn-primary" })
                    <form method="post" asp-action="Remove" asp-route-id="@item.Id" asp-route-contactId="@Model.ContactId" class="d-inline-block">
                        <button type="button" class="btn btn-danger delete-button" data-name="@item.StreetName">
                            Remove
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>

